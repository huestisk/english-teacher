<ContainerBox>:

    text_field: keyboard_input
    text_button: text_button
    voice_button: voice_recognition
    speech_bubble: speech_bubble
    robot: robot

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Image:
        id: robot
        source: 'frontend/images/robot.png'
        pos_hint: {'x':0, 'y':-0.15}

    Image:
        id: speech_bubble
        source: 'frontend/images/speech_bubble.png'
        size_hint: (0.5, 0.5)
        pos_hint: {'x':0.45, 'y':0.45}

    Label:
        id: speech_bubble
        text: ""  # TODO: wrap text after size
        color:  0, 0, 0, 1
        font_size: '20sp'
        halign: 'left'
        size_hint: (None, None)
        pos_hint: {'x':0.5, 'y':0.7}

    TextInput:
        id: keyboard_input
        focus: False
        hint_text: 'Enter Text Here'
        font_size: '20sp'
        pos_hint: {'x':.3, 'y':.05}
        size_hint: (0.4, 0.1)
        padding: [10, 15, 10, 10]

    Button:
        id: text_button
        pos_hint: {'x':.7, 'y':.05}
        size_hint: (0.1, 0.1)
        text: "Enter"
        font_size: '20sp'
        on_press: root.speak()

    Button:
        id: voice_recognition
        pos_hint: {'x':.2, 'y':.05}
        size_hint: (0.1, 0.1)
        border: (0,0,0,0)
        background_normal: 'frontend/images/mic.jpg'
        on_press: root.speech_recognition(*args)