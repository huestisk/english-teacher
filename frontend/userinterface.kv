<ContainerBox>:
    text_field: keyboard_input

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Image:
        source: 'frontend/images/robot.png'
        pos_hint: {'x':0, 'y':-0.15}

    Image:
        source: 'frontend/images/speech_bubble.png'
        size_hint: (0.5, 0.5)
        pos_hint: {'x':0.45, 'y':0.45}

    TextInput:
        id: keyboard_input
        hint_text: 'Enter Text Here'
        font_size: '20sp'
        pos_hint: {'x':.3, 'y':.05}
        size_hint: (0.5, 0.1)
        padding: [10, 15, 10, 10]

    Button:
        pos_hint: {'x':.2, 'y':.05}
        size_hint: (0.1, 0.1)
        border: (0,0,0,0)
        background_normal: 'frontend/images/mic.jpg'
        on_press: root.speech_synthesis(*args)